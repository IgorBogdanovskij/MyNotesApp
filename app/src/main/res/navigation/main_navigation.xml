<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/listNotesFragment">

    <fragment
        android:id="@+id/listNotesFragment"
        android:name="com.example.notes.presentation.listNotes.ListNotesFragmentKotlin"
        tools:layout="@layout/fragment_notes"
        android:label="NotesFragment" >
        <action
            android:id="@+id/action_notesFragment_to_notesFragmentWrite"
            app:destination="@id/notesFragmentWrite" />
        <action
            android:id="@+id/action_listNotesFragment_to_editFragmentKotlin"
            app:destination="@id/editFragmentKotlin" />
    </fragment>
    <fragment
        android:id="@+id/notesFragmentWrite"
        tools:layout="@layout/fragment_notes_write"
        android:name="com.example.notes.presentation.writeNote.NotesWriteFragmentKotlin"
        android:label="NotesFragmentWrite" >

        <argument
            android:name="noteId"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
    <fragment
        android:id="@+id/editFragmentKotlin"
        tools:layout="@layout/fragment_edit"
        android:name="com.example.notes.presentation.edit.EditFragmentKotlin"
        android:label="EditFragmentKotlin" />

</navigation>