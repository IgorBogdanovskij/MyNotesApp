<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/notesFragment">

    <fragment
        android:id="@+id/notesFragment"
        android:name="com.example.notes.features.notes.ui.NotesFragment"
        android:label="NotesFragment"
        tools:layout="@layout/fragment_notes">
        <action
            android:id="@+id/action_notesFragment_to_notesFragmentWrite"
            app:destination="@id/noteDetailsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_listNotesFragment_to_editFragmentKotlin"
            app:destination="@id/editFragmentKotlin" />
    </fragment>

    <fragment
        android:id="@+id/noteDetailsFragment"
        android:name="com.example.notes.features.details.ui.NoteDetailsFragment"
        android:label="NotesDetailsFragment"
        tools:layout="@layout/fragment_note_details">
        <argument
            android:name="noteId"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/editFragmentKotlin"
        android:name="com.example.notes.features.edit.EditFragmentKotlin"
        android:label="EditFragmentKotlin"
        tools:layout="@layout/fragment_edit" />
</navigation>
