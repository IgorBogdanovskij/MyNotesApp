<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/NotesFragment">

    <fragment
        android:id="@+id/NotesFragment"
        android:name="com.example.notes.features.notes_feature.NotesFragment"
        tools:layout="@layout/fragment_notes"
        android:label="NotesFragment" >
        <action
            android:id="@+id/action_notesFragment_to_notesFragmentWrite"
            app:destination="@id/noteDetailsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_listNotesFragment_to_editFragmentKotlin"
            app:destination="@id/editFragmentKotlin" />
    </fragment>
    <fragment
        android:id="@+id/noteDetailsFragment"
        tools:layout="@layout/fragment_note_details"
        android:name="com.example.notes.features.notedetails_feature.NoteDetailsFragment"
        android:label="NotesDetailsFragment">

        <argument
            android:name="noteId"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_notesFragmentWrite_to_listNotesFragment"
            app:destination="@id/NotesFragment"
            app:popExitAnim="@android:anim/slide_in_left"
            app:popUpTo="@id/main_navigation" />

    </fragment>
    <fragment
        android:id="@+id/editFragmentKotlin"
        tools:layout="@layout/fragment_edit"
        android:name="com.example.notes.features.edit.EditFragmentKotlin"
        android:label="EditFragmentKotlin" />
</navigation>
